{
  "mcpServers": {
    "directapp-dev": {
      "command": "npx",
      "args": ["-y", "@staminna/directus-mcp-server"],
      "env": {
        "DIRECTUS_URL": "http://localhost:8055",
        "DIRECTUS_TOKEN": "${DIRECTUS_MCP_TOKEN}"
      },
      "description": "Directus CMS (local development)"
    },
    "directapp-pilot": {
      "command": "npx",
      "args": ["-y", "@staminna/directus-mcp-server"],
      "env": {
        "DIRECTUS_URL": "https://gumpen.coms.no",
        "DIRECTUS_TOKEN": "${DIRECTUS_PILOT_TOKEN}"
      },
      "description": "Pilot Production (READ for analysis - be careful!)"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration (issues, PRs, projects)"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Documentation search (library docs)"
    },
    "local-fs": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "Local filesystem access"
    },
    "dokploy": {
      "command": "/home/claudecode/dev_projects/tools/dokploy-mcp-python/.venv/bin/python",
      "args": ["/home/claudecode/dev_projects/tools/dokploy-mcp-python/server_full.py"],
      "env": {
        "DOKPLOY_URL": "https://deploy.onecom.ai/api",
        "DOKPLOY_API_KEY": "dd_dSDAITWuPCTmjuHKbLzfAFfItqiqjxBzYZqqjenhxWeSWGJrXeieeGMHojydXOex"
      },
      "description": "Dokploy DevOps - Comprehensive MCP: project, compose, domain, deployment, application tools"
    }
  },
  "globalSettings": {
    "timeout": 60000,
    "maxRetries": 3,
    "debug": true
  }
}
